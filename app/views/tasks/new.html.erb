<h1>Create a task for <%= @list.name %></h1>
<%= form_with(model: [@list, @task], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "List Name" %>
  </div>
    <div class="field">
    <%= f.label :details %>
    <%= f.text_field :description, required: true, placeholder: "Description" %>
  </div>
    <div class="field">
    <%= f.label :priority %>
    <%= f.number_field :priority, required: true, in: 1..5 %>

  </div>
  <!-- look into why 'submit' button won't take stylings.. -->
  <%= f.submit "Submit"%>
<% end %>
<%= link_to 'Back to List', list_tasks_path(@list) %>