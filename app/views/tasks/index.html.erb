<h1>Assigned Tasks for <%= @list.name %> </h1>
<%= link_to 'Create a Task', new_list_task_path %>
<br>
<%= link_to 'Back to the Lists', board_lists_path(@list.board_id) %>
<hr>
<% @tasks.each do |task| %>
  <h3><%= "#{task.name}" %><h3>
  <p><%= "#{task.description}"%>
  <%= link_to 'Edit', edit_list_task_path(task.list_id, task) %>
  <%= link_to 'Delete', list_task_path(task.list_id, task), method: :delete %>
  <hr>
<% end %>