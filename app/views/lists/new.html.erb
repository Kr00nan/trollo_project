<h1>Create a list for <%= @board.name %></h1>
<%= form_with(model: [@board, @list], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "List Name" %>
  </div>
    <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, required: true, placeholder: "Description" %>
  </div>
    <div class="field">
    <%= f.label :priority %>
    <%= f.number_field :priority, required: true, in: 1..5 %>

  </div>
  <!-- look into why 'submit' button won't take stylings.. -->
  <%= f.submit "Submit"%>
<% end %>
<%= link_to 'Back to Board', board_lists_path(@board) %>