<h1>Edit <%= @board.name %></h1>
<%= form_with(model: @board, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Board Name" %>
  </div>
  <%= f.submit %>
<% end %>
<%= link_to 'Back to Boards', boards_path %>